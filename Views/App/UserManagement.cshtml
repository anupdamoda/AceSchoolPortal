@model IEnumerable<Users>
<h1>User Management</h1>
<p>Users Count: @Model.Count()</p>
<div>
    <button class="btn btn-dark"><a asp-controller="App" asp-action="NewRegistration" class="nav-link">Add New User</a></button>
    <br />
    <br />
    <center>
        <form asp-action="UserManagement" method="get">
            <div class="form-actions no-color">
                <p>
                    Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                    <input type="submit" value="Search" class="btn btn-default" /> |
                    <a asp-action="UserManagement">Back to Full List</a>
                </p>
            </div>
        </form>
        <table class="table table-striped table-bordered" style="margin-left:30px;margin-right:30px">
            <thead class="thead-dark">
                <tr>
                    <th> FirstName </th>
                    <th> LastName </th>
                    <th> EmailAddress </th>
                    <th> ContactNo  </th>
                    <th> isAdmin </th>
                    <th> isEnabled </th>
                    <th style="color:darkcyan"> Update </th>
                    <th style="color:darkcyan"> Delete </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td nowrap="">  @p.FirstName </td>
                        <td nowrap="">  @p.LastName </td>
                        <td nowrap="">  @p.EmailAddress </td>
                        <td nowrap="">  @p.ContactNo  </td>
                        <td nowrap="">  @p.isAdmin </td>
                        <td nowrap="">  @p.isEnabled </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = p.UserName })
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", new { id = p.UserName })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </center>
</div>