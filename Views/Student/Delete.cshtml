@model Students
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

@using (Html.BeginForm())
{

<div class="form-horizontal">
    <h4>Student</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.first_name)

    <div class="form-group">
        @Html.LabelFor(model => model.first_name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.first_name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.first_name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-4 col-lg-6 col-xs-12">
            <label asp-for="last_name">Lastname:</label>
            <input asp-for="last_name" type="text" class="form-control">
            <span asp-validation-for="last_name"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 col-lg-6 col-xs-12">
            <label asp-for="enrollment_date">Date of Joining:</label>
            <input asp-for="enrollment_date" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control">
            <span asp-validation-for="enrollment_date"></span>
        </div>
    </div>
    @*<div class="form-group">
        <div class="col-md-4 col-lg-6 col-xs-12">
            <label asp-for="ClassGradesclass_grade_id">Grade:</label>
            <input asp-for="ClassGradesclass_grade_id" type="text" class="form-control">
            <span asp-validation-for="ClassGradesclass_grade_id"></span>
        </div>
    </div>*@
    <div class="form-group">
        <div class="col-md-4 col-lg-6 col-xs-12">
            <label asp-for="dob">Date of Birth:</label>
            <input asp-for="dob" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control">
            <span asp-validation-for="dob"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 col-lg-6 col-xs-12">
            <label asp-for="address">Addresses:</label>
            <input asp-for="address" type="text" class="form-control">
            <span asp-validation-for="address"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-4 col-lg-6 col-xs-12">
            <label asp-for="student_id">StudentId:</label>
            <span asp-for="StudentId" type="text" class="form-control"></span>
            <span asp-validation-for="student_id"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>