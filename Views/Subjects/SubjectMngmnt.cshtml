@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<Subjects>
@*@using System.Web.Mvc;*@

@*@model IEnumerable<Students>*@
<center><h2>Subject Management</h2></center>
<button class="btn btn-dark"><a asp-controller="Subjects" asp-action="NewSubject" class="nav-link">Add Subject</a></button>
<br />
<br />
<div>
    <center>
        <form asp-action="SubjectManagement" method="get">
            <div class="form-actions no-color">
                <p>
                    Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                    <input type="submit" value="Search" class="btn btn-default" /> |
                    <a asp-action="SubjectManagement">Back to Full List</a>
                </p>
            </div>
        </form>
        <table class="table table-striped table-bordered" style="margin-left:30px;margin-right:30px; margin-left:30px">
            <thead class="thead-dark">
                <tr>
                    <th> Subject Name </th>
                    <th> Created on/at </th>
                    <th> Update on/at </th>
                    <th style="color:darkcyan"> Update </th>
                    <th style="color:darkcyan"> Delete </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>  @p.subject_name </td>
                        <td>  @p.created_at </td>
                        <td>  @p.updated_at </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = p.subject_id })
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", new { id = p.subject_id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </center>
</div>