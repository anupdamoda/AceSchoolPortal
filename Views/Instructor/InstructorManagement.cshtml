@model IEnumerable<Instructors>
    <center><h2>Instructor Management</h2></center>
<p>Instructors Count: @Model.Count()</p>
<button class="btn btn-dark"><a asp-controller="Instructor" asp-action="NewInstructor" class="nav-link">Add Instructor</a></button>
<br />
<br />
<div>
    <center>
        <form asp-action="InstructorManagement" method="get">
            <div class="form-actions no-color">
                <p>
                    Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                    <input type="submit" value="Search" class="btn btn-default" /> |
                    <a asp-action="InstructorManagement">Back to Full List</a>
                </p>
            </div>
        </form>
        <table class="table table-striped table-bordered" style="margin-left:30px;margin-right:30px; margin-left:30px">
            <thead class="thead-dark">
                <tr>
                    <th> FirstName </th>
                    <th> LastName </th>
                    <th> Experience( in Years ) </th>
                    @*<th> Emergency Contact number </th>*@
                    <th> Enrollment Date </th>
                    <th style="color:darkcyan"> Update </th>
                    <th style="color:darkcyan"> Delete </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>  @p.first_name </td>
                        <td>  @p.last_name </td>
                        <td>  @p.experience </td>
                        @*<td>  @p.EmergencyContact  </td>*@
                        <td>  @p.enrollment_date.ToString("dd/MM/yyyy") </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = p.instructor_id })
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", new { id = p.instructor_id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </center>
</div>